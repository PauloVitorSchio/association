
<% if notice.present? %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= link_to "< Voltar", payments_path, class: 'btn btn-secondary btn-sm' %>

<div class="row mt-4">
  <div class="col-6">
    <%= form_with(model: payment) do |form| %>
      <% if payment.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% payment.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render '/layouts/person_search', form: form %>

      <div class="mb-3">
        <%= form.label :amount, 'Valor', class: 'form-label' %>
        <%= form.number_field :amount, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.label :paid_at , 'Data de pagamento', class: 'form-label' %>
        <%= form.date_field :paid_at, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= form.submit 'Salvar', class: 'btn btn-primary btn-lg' %>
      </div>

    <% end %>
  </div>
</div>
